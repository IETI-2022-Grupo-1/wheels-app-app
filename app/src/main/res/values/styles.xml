<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Ingresar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SplashTheme" parent="Theme.WheelsApp">
        <item name="android:windowBackground">@drawable/splashscreenbg</item>
    </style>

    <style name="mySpinnerItemStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/white_wheels</item>
    </style>
    
    <style name="Theme.WheelsApp.Temapopup">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>
</resources>