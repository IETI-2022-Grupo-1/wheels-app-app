<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="325dp"
        android:layout_height="51dp"
        android:layout_marginTop="416dp"
        android:backgroundTint="@color/pink_wheels"
        android:onClick="logIn"
        android:text="@string/ingresar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,TextContrastCheck,TextContrastCheck" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="325dp"
        android:layout_height="29dp"
        android:layout_marginTop="92dp"
        android:text="@string/ingresa_tus_datos"
        android:textColor="@color/white_wheels"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="325dp"
        android:layout_height="24dp"
        android:layout_marginTop="160dp"
        android:text="@string/nombre_de_usuario"
        android:textColor="@color/blue_wheels"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="325dp"
        android:layout_height="17dp"
        android:layout_marginTop="184dp"
        android:text="@string/escribe_tu_correo_institucional"
        android:textColor="@color/blue_wheels_Dark"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextEmailAddress2"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="208dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="@color/white_wheels"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/white_wheels"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="325dp"
        android:layout_height="27dp"
        android:layout_marginTop="20dp"
        android:text="@string/contraseÃ±a"
        android:textColor="@color/blue_wheels"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="325dp"
        android:layout_height="15dp"
        android:layout_marginTop="476dp"
        android:text="@string/login_no_user_wheels"
        android:textAlignment="center"
        android:textColor="@color/white_wheels"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="325dp"
        android:layout_height="16dp"
        android:layout_marginTop="490dp"
        android:clickable="true"
        android:onClick="register"
        android:text="@string/login_registrar"
        android:textAlignment="center"
        android:textColor="@color/orange_wheels"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>