<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:padding="6dp">
            <ImageView
                android:id="@+id/iconImageView"
                android:layout_width="10dp"
                android:layout_height="160dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:foregroundGravity="center"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"/>
                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/iconImageView"
                    android:orientation="vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/iconImageView"
                    >
                    <TextView
                        android:id="@+id/route"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Trayecto a los Andes"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/hour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Salida 3:00pm - Llegada 5:00pm"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/stops"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Paradas programadas"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/stop1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="- Stop 1"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        />
                    <TextView
                        android:id="@+id/stop2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="- Stop 2"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        />
                    <TextView
                        android:id="@+id/stop3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="- Stop 3"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        />
                    <TextView
                        android:id="@+id/driverName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Juan David Murillo ·★ 5.0"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        />
                    <TextView
                        android:id="@+id/model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Nissan March Azul ·JKL 256"
                        android:gravity="center"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:textSize="8dp"
                        />
                </LinearLayout>
            <Button
                android:id="@+id/numberOfPas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/pink_wheels"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp"
                android:textSize="5dp"
                android:text="3 cupos disponibles"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                ></Button>



        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>